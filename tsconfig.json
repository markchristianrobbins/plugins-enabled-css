{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext", // esbuild will bundle to CJS
		"lib": [
			"ES2020",
			"DOM"
		],
		"strict": true,
		"moduleResolution": "Node",
		"types": [
			"obsidian",
			"node"
		],
		"noEmit": true, // tsc = type check only
		"skipLibCheck": true,
		"isolatedModules": true
	},
	"include": [
		"src/**/*.ts",
		"main.ts"
	]
}